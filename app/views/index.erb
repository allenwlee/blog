<div class="container">
  <div class="row-fluid">
    <h1>Welcome to Bl()gger</h1>
  </div>
    <div class="row-fluid">
      <div class="span4">
        <%= erb :_login, :layout => false %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= erb :_tags, :layout => false %>
      </div>  
    </div>
    <div class="row-fluid">
      <% Post.all.each do |p| %>
        <div class="span3">
        <%= erb :_post, :locals => { :title => p.title, :body => p.body, :email => User.find(p.user_id).email } %>  
        </div>
      <% end %>
  </div>
</div>
  